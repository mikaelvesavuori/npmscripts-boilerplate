{
	"name": "npmscripts-boilerplate",
	"version": "0.0.1",
	"author": "Mikael Vesavuori",
	"license": "MIT",
	"scripts": {
		"test": "eslint src/**/*.js && stylelint src/**/*.scss && jest",
		"jest": "jest --notify",
		"eslint": "eslint --cache --fix ./",
		"stylelint": "stylelint 'src/scss/**/*.scss' --syntax scss",
		"stylefmt": "stylefmt 'src/scss/main.scss' input.css",
		"clean": "rimraf dist/**/*",
		"dev": "npm-run-all -p sass:* js:* html:*",
		"html:watch": "watch **/*.html",
		"js:build": "babel -d src/js/**/*.js dist/",
		"js:watch": "babel-watch src/js/",
		"prepublish": "build",
		"release": "np",
		"build-task:sass": "node-sass-chokidar --source-map true src/scss -o dist/css",
		"build-task:autoprefixer": "postcss --use autoprefixer -c options.json -o dist/css/main.css src/scss/*.scss",
		"sass:build": "npm-run-all -p build-task:*",
		"sass:watch": "node-sass-chokidar 'src/scss/**/*.scss' -c 'npm run sass:build'",
		"open:prod": "opener http://example.com",
		"open:stage": "opener http://staging.example.internal",
		"open:dev": "opener http://localhost:9090"
	},
	"main": "src/",
	"devDependencies": {
		"babel": "^6.23.0",
		"babel-cli": "^6.24.1",
		"babel-core": "^6.25.0",
		"babel-jest": "^20.0.3",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-latest": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"babel-watch": "^2.0.6",
		"eslint": "^4.0.0",
		"eslint-plugin-react": "^7.1.0",
		"jest": "^20.0.4",
		"node-sass-chokidar": "^0.0.3",
		"np": "^2.16.0",
		"npm-run-all": "^4.0.2",
		"opener": "^1.4.3",
		"postcss-cli": "^4.1.0",
		"precss": "^1.4.0",
		"regenerator-runtime": "^0.10.5",
		"rimraf": "^2.6.1",
		"stylefmt": "^6.0.0",
		"stylelint": "^7.11.1",
		"stylelint-no-unsupported-browser-features": "^1.0.0",
		"watch": "^1.0.2"
	},
	"babel": {
		"presets": [
			"es2015",
			"latest",
			"stage-0"
		]
	}
}
